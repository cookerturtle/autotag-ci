{
  "name": "autotag-ci",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "description": "AutoTag-CI monorepo (core + plugins + docs)",
  "bin": {
    "autotag-ci": "./cli.mjs"
  },
  "scripts": {
    "dev": "vitest watch",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "esbuild packages/**/src/index.ts --outdir=packages --format=esm --platform=node --bundle --sourcemap --target=node20",
    "lint": "eslint . --ext .ts,.js",
    "prepublishOnly": "npm run build && npm run typecheck && npm test"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/node": "^22.15.18",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "esbuild": "^0.25.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.1.0",
    "husky": "^8.0.0",
    "jsdom": "^26.1.0",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md}": "eslint --fix"
  }
}